<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_gravity="clip_vertical"
    android:background="?attr/colorPrimary">
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/music_list_pic"
        android:layout_gravity="center_vertical"
        android:src="@drawable/my_favorite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_list_position"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_marginLeft="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_list_name"
            android:text="歌曲名称"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:paddingTop="3dp"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_liat_artist_and_album"
            android:layout_below="@id/music_list_name"
            android:text="歌手-专辑"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:maxLines="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/music_liat_artist_and_album"
            android:background="#999999"
            android:padding="2dp"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_list_time"
        android:text="00:00"
        android:textSize="20dp"
        android:padding="2dp"
        android:textColor="#FFF"
        android:layout_gravity="right|bottom"/>

</LinearLayout>